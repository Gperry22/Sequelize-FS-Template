extends layout
//importing everything below into block content1 on layout.jade ===================================
block content1
    body
        .container
            .jumbotron
                h1.display-4 Enter your Name and a Number!
                p.lead
                    | Enter you Namer and your favorite number below and hit submit. In the third box after you entered you name and number previously, enter your name!
                form
                    .form-group
                    label(for='name') Name
                    input#nameInput.form-control(type='text', aria-describedby='emailHelp', placeholder='Enter your name')
                    .form-group
                    label(for='number') Number
                    input#numberInput.marginBottom.form-control(type='number', placeholder='Enter your favorite number')
                    button#submitOne.btn.btn-primary(type='submit') Submit
            .jumbotron
                h1.display-4 Enter your Name to see your favorite Number
                form
                    .form-group
                    label(for='name') Name
                    input#nameInputTwo.marginBottom.form-control(type='text', aria-describedby='emailHelp', placeholder='Enter your Name to see your favorite number ')
                    button#submitTwo.btn.btn-primary(type='submit') Submit


